<div class="blog-post">
        <h2 class="blog-post-title"> <a href="{{ path('angie_blog_post_view', {'slug': post.slug }) }} ">{{ post.title }}</a>    </h2>
        <p class="blog-post-meta">{{ post.created|date("m/d/Y") }} by <a href="#">NJ</a></p>
        <p> {{ post.body|striptags|truncate(50, true)|raw }}</p>
        
        {% for categ in post.categories %}
         <button class="btn btn-xs btn-info" type="button"> {{ categ.name }} </button>
        {% endfor %}
                
</div>