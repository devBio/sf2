{% extends 'AngieBlogBundle::layout.html.twig' %}


{% block body %}
    <!-- blog-post -->
    
    <div class="blog-post">
        <h2 class="blog-post-title"> {{ post.title }}    </h2>
        <p class="blog-post-meta">{{ post.created|date("m/d/Y") }} by <a href="#">NJ</a></p>

        <p> {{ post.body }}</p>
        
        {% for categ in post.categories %}
         <button class="btn btn-lg btn-primary" type="button"> {{ categ.name }} </button>
        {% endfor %}
        
    </div>
    <!-- end-blog-post -->
   
{% endblock %}